<%= form_for([@event, @event.tasks.build]) do |form| %>
    <div class="task-field">
        <div>
            <%= form.text_field :title, placeholder: "+ Item", autocomplete: "off", id: "task-textarea" %>
        </div>
        <div class="actions">
            <%= form.submit "Create" %>
        </div>
    </div>
<% end %>

<script src="/assets/tasks-form.js"></script>