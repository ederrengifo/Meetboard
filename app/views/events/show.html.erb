<main class="board">

    <%= render "sidebar" %>

    <div id="workspace" class="width-48">
        <div class="workspace-head">
            <div class="left">
                <button id="show-sidebar" class="show-sidebar hidden" onclick="showLeft()">
                    <%= inline_svg('icon-sidebar') %>
                </button>
                <div class="hour">
                    <span> 
                        <%= inline_svg('icon-time') %>
                    </span>
                    <%= @event.starts.strftime("%I:%M%p") %> to <%= @event.ends.strftime("%I:%M%p") %> (<%= @event_difference %>)
                </div>
            </div>
            <div class="right">
                <% if @event.hangout_link != nil %>
                    <a class="option" href="<%= @event.hangout_link %>" target="_blank">
                        <span><%= inline_svg('icon-link') %></span>
                    </a>
                <% end %>
                <a class="option">
                    <span><%= inline_svg('icon-share') %></span>
                </a>
                <% if @event.ends.to_i < Time.now.to_i %>
                    <%= link_to @event, method: :delete, data: {confirm: "Are you sure?"}, class: "option" do %>
                        <%= inline_svg('icon-trash') %>
                    <% end %>
                <% end %>
            </div>
        </div>
        <div class="scroll-workspace-container">
            <h1>
                <%= @event.title %>
            </h1>
            <div class="event-tabs">
                
                <button class="details" onclick="showDetails()" id="event-details-btn">
                    Details
                </button>
                
                <% if @event.attendees.count != 0 %>
                    <button class="details" onclick="showAttendees()" id="event-attendees-btn">
                        Attendees (<%= @event.attendees.count %>)
                    </button>
                <% end %>

                <button class="details" onclick="showType()" id="event-type-btn">
                    Help
                </button>

                <%= link_to "Public", event_report_path(@event.id) %>
                <a href="<%= event_download_path(@event.id) %>.txt" download="<%= @event.title %> Report">Download</a>

                <div id="event-details" class="hidden">
                    <div class="details-wrapper">
                        <% if @event.description != nil %>
                            <h4>Description</h4>
                            <p>
                                <%= @event.description.html_safe %>
                            </p>
                        <% end %>
                        <h4>Date</h4>
                        <p>
                            <%= @event.starts.strftime("%A, %B %d") %>
                        </p>
                        <h4>Time</h4>
                        <p>
                            From <%= @event.starts.strftime("%I:%M%p") %> to <%= @event.ends.strftime("%I:%M%p") %> (<%= @event_difference %>)
                        </p>
                        <h4>Created by</h4>
                        <p>
                            <%= @event.creator %>
                        </p>
                        <% if @event.location != nil %>
                            <h4>Location</h4> 
                            <p>
                                <%= @event.location %>
                            </p> 
                        <% end %>
                    </div>
                </div>

                <div id="event-attendees" class="hidden">
                    <div class="details-wrapper">
                        <% @attendee_grouping.each do |response, attendees| %>
                            <h4>
                                <% if response == "accepted" %>
                                    Confirmed
                                <% else %>
                                    <% if response == "needsAction" %>
                                        Pending
                                    <% else %>
                                        <% if response == "declined" %>
                                            Declined
                                        <% else %>
                                            <% if response == "tentative" %>
                                                Maybe
                                            <% else %>
                                                <%= response %>
                                            <% end %>
                                        <% end %>
                                    <% end %>
                                <% end %> 
                                (<%= attendees.count %>)
                            </h4>
                            <ul>
                            <% for attendee in attendees %>
                                <li>
                                    <% if attendee.name == "" || attendee.name == nil %>
                                        <%= attendee.email %>
                                    <% else %>
                                        <%= attendee.name %>
                                    <% end %>
                                </li>
                            <% end %>
                            </ul>
                        <% end %>
                    </div>
                </div>

                <div id="event-type" class="hidden">
                    <div class="details-wrapper">
                        <h4>Select Type</h4>
                        <select id="help-types" onchange="changeType()">
                            <option value="general" <%= @event.category == "general" ? 'selected' : '' %> >General</option>
                            <option value="personal" <%= @event.category == "1:1" ? 'selected' : '' %> >Personal 1:1</option>
                            <option value="checkin" <%= @event.category == "check-in" ? 'selected' : '' %> >Team Check-in</option>
                        </select>
                        <div id="general" class="<%= @event.category == "general" ? '' : 'hidden' %>">This is a general meeting!</div>
                        <div id="personal" class="<%= @event.category == "1:1" ? '' : 'hidden' %>">This is a personal meeting!</div>
                        <div id="checkin" class="<%= @event.category == "check-in" ? '' : 'hidden' %>"> This is a meeting for check-in!</div>
                    </div>
                </div>

            </div>
            

            <%= render 'form', event: @event %>

        </div>
    </div>

    <div id="todobar" class="width-30">
        <div class="todohead">
            <div class="tabs">
                <button class="todo-tab active" id="event-task-tab" onclick="showEventTasks()">
                    Action items
                    (<%= @event.tasks.where(completed: false).count %>)
                </button>
                <button class="todo-tab" id="all-tasks-tab" onclick="showAllTasks()">
                    All Time
                    (<%= @tasks.where(completed: false).count %>) 
                </button>
                <div class="cleaner">
                    <button id="clear-events" onclick="cleanTasks()" class="clear-tasks"></button>
                    <button id="display-events" onclick="displayTasks()" class="display-tasks hidden"></button>
                </div>
            </div>
        </div>

        <div class="scroll-todobar-container">
            <div class="tasks-container" id="event-task-block">
                <div id="event-tasks-cleaned" class="hidden">
                    <% @event.tasks.each do |task| %>
                        <% if task.completed == false %>
                            <%= render partial: 'tasks/task', locals: { task: task } %>
                        <% end %>
                    <% end %>
                </div>
                <div id="event-tasks-all" class="">
                    <% @event.tasks.each do |task| %>
                        <%= render partial: 'tasks/task', locals: { task: task } %>
                    <% end %>
                </div>
                <%= render 'tasks/form' %>
            </div>

            <div class="task-container hidden" id="all-tasks-block">

                <%= render 'alltasks' %>

            </div>
            
        </div>
    </div>

    <script src="/assets/components.js"></script>
    <script src="/assets/events-show.js"></script>
  
</main>

