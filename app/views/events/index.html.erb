<main class="board">
    
    <%= render "sidebar" %>

    <div class="calendar-landing">
        <div>
            <h3>Your next meeting:</h3>
            <%= link_to(@calendars.first.id) do %>
                <%= @calendars.first.summary %> 
            <% end %>
            on <%= @calendars.first.start.date_time&.strftime("%A %d") %> at <%= @calendars.first.start.date_time&.strftime("%I:%M%p") %>
        </div>
    </div>
</main>