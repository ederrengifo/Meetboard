<main class="board">
    
    <%= render "sidebar" %>

    <div class="workspace">

    <div class="calendar-landing">
        <div>
            <h3>Your next meeting:</h3>
            <% if @events.present? %>
                <%= link_to(@calendars.first.id) do %>
                    <%= @calendars.first.summary %> 
                <% end %>
                on <%= @calendars.first.start.date_time&.strftime("%A %d") %> at <%= @calendars.first.start.date_time&.strftime("%I:%M%p") %>
            <% end %>
        </div>
    </div>

    </div>
    <div class="todobar">
        <h4>You have <%= @tasks.count %> tasks</h4>

        <div class="task-container" id="all-tasks-block">
        <% @tasks.each do |t| %>
            <div class="task">
                <label class="container">
                    <%= t.title %><br>
                    <a href="<%= t.event_id %>" class="event">
                        <%= t.event_title %>
                    </a>
                    <input type="checkbox" class="checkbox">
                    <span class="checkmark"></span>
                </label>
            </div>
        <% end %>
        </div>
    </div>
</main>